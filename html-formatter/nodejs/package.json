{
  "name": "cucumber-html-formatter",
  "version": "1.0.0",
  "description": "HTML formatter for Cucumber",
  "main": "lib/index.js",
  "scripts": {
    "build": "webpack",
    "test": "mocha && npm run test-cucumber && npm run test-cucumber-eventsource && npm run test-cucumber-react",
    "test-cucumber": "cucumberjs",
    "test-cucumber-eventsource": "cucumber_html_formatter_output=eventsource cucumber_html_formatter_input=socket cucumberjs",
    "test-cucumber-react": "cucumber_html_formatter_output=react cucumber_html_formatter_input=socket cucumberjs",
    "test-cucumber-selenium": "cucumber_html_formatter_output=selenium cucumber_html_formatter_input=socket cucumberjs"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/cucumber/cucumber-html-formatter-nodejs.git"
  },
  "keywords": [
    "cucumber",
    "html",
    "report",
    "formatter"
  ],
  "author": "Cucumber Ltd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cucumber/cucumber-html-formatter-nodejs/issues"
  },
  "homepage": "https://github.com/cucumber/cucumber-html-formatter-nodejs#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.11.4",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "cucumber": "^1.2.2",
    "enzyme": "^2.4.1",
    "eslint": "^3.3.1",
    "gherkin": "^4.0.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.0.2",
    "react-addons-test-utils": "^15.3.1",
    "selenium-webdriver": "^2.53.3",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "debug": "^2.2.0",
    "event-stream": "^3.3.4",
    "eventsource": "^0.2.1",
    "express": "^4.14.0",
    "gherkin": "^4.0.0",
    "immutable": "^3.8.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "server-destroy": "^1.0.1",
    "sse": "0.0.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-warning-comments": [
        "warn"
      ],
      "comma-dangle": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "keyword-spacing": [
        "error"
      ]
    }
  }
}
