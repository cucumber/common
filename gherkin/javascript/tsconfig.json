{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "downlevelIteration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
