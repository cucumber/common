{
  "id": "https://raw.github.com/cucumber/cucumber/master/event-protocol/schemas/attachment.json#",
  "title": "attachment",
  "description": "Event describing a specification document, containing executable examples",
  "type": "object",
  "properties": {
    "type": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "properties": {
        "uri": {
          "type": "string"
        },
        "start": { "$ref": "defs.json#/ast-location" }
      },
      "required": [
        "uri",
        "start"
      ],
      "additionalProperties": false
    },
    "data": {
      "type": "string"
    },
    "media": {
      "type": "object",
      "properties": {
        "encoding": {
          "enum": [
            "utf-8",
            "base64"
          ]
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "encoding",
        "type"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "type",
    "source",
    "data",
    "media"
  ],
  "additionalProperties": false
}
