{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"consistent-return": 1,
		"eqeqeq": [2, "always", { "null": "ignore" }],
		"func-name-matching": 0,
		"id-length": 0,
		"max-lines-per-function": 0,
		"max-statements": 0,
		"multiline-comment-style": 0,
		"new-cap": [2, { "capIsNewExceptions": ["GetIntrinsic"] }],
		"no-magic-numbers": 0,
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"max-params": [2, 3],
				"no-new-func": 1,
			},
		},
	],
}
